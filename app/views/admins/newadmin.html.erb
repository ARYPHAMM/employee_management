<div class="background-login">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="login">
					<h1 class="text-center">
					Login Admin
					</h1>
					<div class="input">
						<%= form_for(:admin , :html => {class: "form-horizontal", role: "form"},url: admins_newadmin_path) do |f| %>
						<div class="form-group">
							<div class="col-sm-10">
								<%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true  %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-10">
								<%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true , autocomplete: "off"  %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Login" , class: "btn-block btn-lg btn-primary center login-btn" %>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
